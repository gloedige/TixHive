      fx:controller="de.iav.frontend.controller.LogoutController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox prefHeight="81.0" prefWidth="320.0">
        <Pane prefHeight="81.0" prefWidth="321.0">
            <ImageView fitHeight="145.0" fitWidth="360.0" layoutX="-20.0" layoutY="-25.0" preserveRatio="true" y="5.0">
                <Image url="@../pictures/Bildschirmfoto2023-08-17um13.16.45.png"/>
            </ImageView>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Pane>
    </HBox>
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="250.0" prefWidth="320.0"
           stylesheets="@../css/Label.css" text="LOGOUT SUCCESSFUL" textAlignment="CENTER" textFill="#224783"
           wrapText="true">
        <font>
            <Font name="Apple Symbols" size="45.0"/>
        </font>
        <VBox.margin>
            <Insets top="150.0"/>
        </VBox.margin>
    </Label>
    <Button onAction="#switchToLoginScene" prefHeight="30.0" prefWidth="338.0" text="login">
        <VBox.margin>
            <Insets top="200.0"/>
        </VBox.margin>
    </Button>
</VBox>
